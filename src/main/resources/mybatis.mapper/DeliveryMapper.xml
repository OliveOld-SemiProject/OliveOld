<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.semi.oliveold.delivery.repository.DeliveryMapper">

    <resultMap type="OrderDTO" id="OrderResultMap">
        <id property="productNo" column="PRODUCT_NO"/>
        <result property="orderNo" column="ORDER_NO"/>
        <result property="orderDate" column="ORDER_DATE"/>
        <result property="orderQuan" column="ORDER_QUAN"/>
        <result property="memberId" column="MEMBER_ID"/>
    </resultMap>

    <resultMap type="ProductDTO" id="productResultMap">
        <id property="productNo" column="PRODUCT_NO"/>
        <result property="productName" column="PRODUCT_NAME"/>
        <result property="productPrice" column="PRODUCT_PRICE"/>
        <result property="productQuan" column="PRODUCT_QUAN"/>
        <result property="productDate" column="PRODUCT_DATE"/>
        <result property="productStatus" column="PRODUCT_STATUS"/>
        <result property="productImage1" column="PRODUCT_IMAGE1"/>
        <result property="productImage2" column="PRODUCT_IMAGE2"/>
        <result property="categoryCode" column="CATEGORY_CODE"/>
        <result property="categoryName" column="CATEGORY_NAME"/>
    </resultMap>

    <resultMap type="PaymentDTO" id="paymentResultMap">
        <id property="productNo" column="PAYMENT_NO"/>
        <result property="productName" column="PAYMENT_DATE"/>
        <result property="productPrice" column="PAYMENT_AMOUNT"/>
        <result property="productQuan" column="MEMBER_ID"/>
    </resultMap>

    <select id="selectPayment" resultMap="paymentResultMap">
        SELECT
               PAYMENT_DATE
             , PAYMENT_AMOUNT
          FROM SemiDB.PAYMENT
         WHERE MEMBER_ID = #{ memberId }
    </select>

    <select id="selectOrder" resultType="OrderResultMap">
        SELECT
               ORDER_QUAN
          FROM SemiDB.TBL_ORDER
         WHERE MEMBER_ID = #{ memberId }
    </select>

    <select id="selectDeliveryList" resultMap="productResultMap">
        SELECT
               PRODUCT_NAME
             , PRODUCT_IMAGE1
          FROM SemiDB.PRODUCT
         WHERE PRODUCT_NO = #{ productNo }
    </select>
</mapper>