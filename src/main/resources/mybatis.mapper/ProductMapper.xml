<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.semi.oliveold.product.repository.ProductMapper">

    <resultMap type="categoryDTO" id="categoryResultMap">
        <id property="code" column="CATEGORY_CODE"/>
        <result property="name" column="CATEGORY_NAME"/>
    </resultMap>

    <select id="findByAllCategory" resultMap="categoryResultMap">
        SELECT *
        FROM SemiDB.CATEGORY
    </select>

    <insert id="insertProduct" parameterType="ProductDTO">
        insert into SemiDB.PRODUCT
        (
            PRODUCT_NAME,
            PRODUCT_PRICE,
            PRODUCT_QUAN,
            PRODUCT_DATE,
            PRODUCT_STATUS,
            PRODUCT_IMAGE1,
            PRODUCT_IMAGE2,
            CATEGORY_CODE,
            CATEGORY_NAME
        )
        Values
        (
            #{productName},
            #{productPrice},
            #{productQuan},
            NOW(),
            #{productStatus},
            #{productImage1},
            #{productImage2},
            #{categoryCode},
            #{categoryName}
        );

    </insert>
</mapper>