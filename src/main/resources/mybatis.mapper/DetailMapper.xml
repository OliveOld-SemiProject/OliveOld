        , PRODUCT_DATE
        , CATEGORY_CODE
        , PRODUCT_STATUS
        , PRODUCT_IMAGE1
        , PRODUCT_IMAGE2
        , CATEGORY_NAME
        FROM SemiDB.PRODUCT
    </select>

