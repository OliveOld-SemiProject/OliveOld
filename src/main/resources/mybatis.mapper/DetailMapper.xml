    <select id="selectProductList" resultMap="DetailResultMap">
        SELECT
        PRODUCT_NO
        , PRODUCT_NAME
        , PRODUCT_PRICE
        , PRODUCT_QUAN
        , PRODUCT_DATE
        , CATEGORY_CODE
        , PRODUCT_STATUS
        , PRODUCT_IMAGE1
        , PRODUCT_IMAGE2
        , CATEGORY_NAME
        FROM SemiDB.PRODUCT
    </select>

    <select id="findProductListByNo" resultMap="DetailResultMap">
        SELECT
        PRODUCT_NO
        , PRODUCT_NAME
        , PRODUCT_PRICE
        , PRODUCT_QUAN
        , PRODUCT_DATE
        , CATEGORY_CODE
        , PRODUCT_STATUS
        , PRODUCT_IMAGE1
        , PRODUCT_IMAGE2
        , CATEGORY_NAME
        FROM SemiDB.PRODUCT
        WHERE PRODUCT_NO = #{ code }
    </select>

    <select id="findNewProductListByNo" resultMap="DetailResultMap">
        SELECT
        PRODUCT_NO
        , PRODUCT_NAME
        , PRODUCT_PRICE
        , PRODUCT_QUAN
        , PRODUCT_DATE
        , CATEGORY_CODE
        , PRODUCT_STATUS
        , PRODUCT_IMAGE1
        , PRODUCT_IMAGE2
        , CATEGORY_NAME
        FROM SemiDB.PRODUCT
        WHERE PRODUCT_NO = #{ code }
    </select>




    <select id="findReviewListByProductNo" resultMap="ReviewResultMap">
        SELECT
        REVIEW_NO
        , REVIEW_CONTENTS
        , REVIEW_WRITER
        , REVIEW_REPLY
        , PRODUCT_NO
        , REVIEW_DATE
        FROM SemiDB.REVIEW
        WHERE PRODUCT_NO = #{ code }
    </select>

